<div class="form-group">
    <div id="textBlockText" class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Имя</span>
        </div>
        <input type="text" class="form-control" placeholder="Имя блока" data-bind="value:caption" />
    </div>
</div>

<div class="form-group">
    <label class="d-inline">Шрифт</label>
    <select class="form-control fontPicker d-inline" id="sel1" data-bind="selectedOptions:selectedFonts">
        <!-- ko foreach: $parent.fonts()-->
        <option data-bind="style:{fontFamily:$data}, text:$data, value:$data"></option>
        <!-- /ko-->
    </select>
    <select class="form-control fontSizePicker d-inline" data-bind="options: $parent.fontSizes, selectedOptions:selectedFontSizes"></select>
</div>

<div class="form-group">
    <label class="d-inline">Интервал</label>
    <select class="form-control fontSizePicker d-inline" data-bind="options: $parent.fontIndexes, selectedOptions:selectedFontIndexes"></select>
</div>
<div class="form-group">
    <label class="d-inline">Формат</label>
    <select class="form-control fontPicker d-inline" id="sel1" data-bind="selectedOptions:selectedFormats">
        <!-- ko foreach: $parent.datetimeformats()-->
        <option data-bind="text:$data.denomination, value:$data"></option>
        <!-- /ko-->
    </select>
</div>

<div class="form-group">
    <div class="accordion accordion-properties" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Цвета
                    </button>
                </h5>
            </div>
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <div id="datetimeBlockBackgroundCP" class="input-group colorpicker-component">
                        <span class="input-group-text color-prompt" id="basic-addon1">Цвет фона</span>
                        <input type="text" class="form-control" data-bind="value:backColor" />
                        <span class="input-group-append">
                            <span class="input-group-text colorpicker-input-addon">
                                <i data-bind="style: {'background-color':backColor}"></i>
                            </span>
                        </span>
                    </div>
                    <div id="datetimeBlockTextColorCP" class="input-group colorpicker-component">
                        <span class="input-group-text color-prompt" id="basic-addon2">Цвет текста</span>
                        <input type="text" class="form-control" data-bind="value:textColor" />
                        <span class="input-group-append">
                            <span class="input-group-text colorpicker-input-addon">
                                <i data-bind="style: {'background-color':textColor}"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseStyle" aria-expanded="true" aria-controls="collapseStyle">
                        Начертание
                    </button>
                </h5>
            </div>
            <div id="collapseStyle" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="italicCheck" data-bind="checked: italic">
                        <label class="form-check-label" for="italicCheck">Курсив</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="boldCheck" data-bind="checked: bold">
                        <label class="form-check-label" for="boldCheck">Полужирный</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Выравнивание
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    <div class="radio">
                        <label><input type="radio" name="optradio" value="0" data-bind="checked: align">По левому краю</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="optradio" value="1" data-bind="checked: align">По центру</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="optradio" value="2" data-bind="checked: align">По правому краю</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>